<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <!-- 定义当button 处于pressed 状态时的形态。-->
        <shape>   
            <!-- 颜色渐变 -->         
            <gradient android:type="radial" android:startColor="#e0ffffff" 
                android:gradientRadius="50" android:endColor="#000000"/>
            <!-- 填充 solid-->
            <!-- 描边 -->
            <stroke android:width="1dp" android:color="#efff" />
            <!-- 圆角 -->
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:drawable="@drawable/btn_4views"></item>
</selector>
