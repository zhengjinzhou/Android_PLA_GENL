<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playitem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#666666" 
    android:gravity="center">

    <SurfaceView android:id="@+id/camera_surfaceview" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_below="@id/camera_surfaceview">
		<TextView 
		    android:id="@+id/camera_name"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:layout_alignParentLeft="true" 
		    android:layout_centerVertical="true" 
		    android:layout_gravity="left" 
		    android:layout_marginLeft="2dp" 
		    android:textSize="12sp"
		    android:text="name"/>
		<ImageView 
		    android:id="@+id/camera_recod_btn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true" 
		    android:layout_centerVertical="true" 
		    android:layout_gravity="right" 
		    android:layout_marginRight="2dp" 
		    android:background="@drawable/microphone_off"/>
	</RelativeLayout>
	
</RelativeLayout>
