<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bt_rlsb">

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="21dp"
        android:text="2019年1月17 08:25"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tvTime2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTime"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="记录您的最新打卡时间为 08:25"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTime2"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:text="唇语验证码"
        android:textColor="@color/white"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/tvChun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@color/white"
        android:paddingBottom="8dp"
        android:paddingLeft="44dp"
        android:paddingRight="44dp"
        android:paddingTop="8dp"
        android:textColor="#28678b"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvChance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvChun"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:text="看不清楚，换一种"
        android:textColor="@color/bottom_2"
        android:textSize="17sp" />

    <RelativeLayout
        android:id="@+id/rlSP"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/tvChance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@drawable/rlsb_yuan">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/video" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="录视频"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btDaKa"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlSP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bt_daka"
        android:text="打卡"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_wave" />
</RelativeLayout>